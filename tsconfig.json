{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"baseUrl": ".",
		"rootDir": ".",
		"paths": {
			"~/*": [
				"./*"
			],
		},
		"typeRoots": [
			"node_modules/@types",
			"./types/definitions"
		],
		"forceConsistentCasingInFileNames": true
	},
}